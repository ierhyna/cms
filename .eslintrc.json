{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "node"
    ],
    "rules": {
        "no-console": 0,
        "import/no-nodejs-modules": 0,
        "import/no-commonjs": 0,
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-sync": 0
    }
}
